---
const { infoContacto } = Astro.props;
---

<header class="fixed top-0 w-full bg-white/80 backdrop-blur-md z-50 shadow-sm">
  <div class="container mx-auto px-6 py-3 flex justify-between items-center">

    <!-- Logo -->
    <a href="/" class="flex items-center"> 
      <img 
        src="/images/logo.png" 
        alt="Erika Obrist - Arquitecta" 
        class="h-12 w-auto"
        width="200"
        height="80"
        loading="eager"
      />
    </a>

    <!-- Navegación (desktop) -->
    <nav class="hidden md:flex gap-8 text-lg font-medium text-gray-800">
      <a href="/" class="hover:text-primary transition-colors">Inicio</a>
      <a href="/#proyectos" class="hover:text-primary transition-colors">Proyectos</a>
      <a href="/#acerca-contacto" class="hover:text-primary transition-colors">Contacto</a>
    </nav>

    <!-- Íconos sociales y botón hamburguesa -->
    <div class="flex items-center gap-4">
      <a href={infoContacto.instagram} aria-label="Instagram" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform">
        <svg class="w-6 h-6" style="color: var(--color-primary)" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
        </svg>
      </a>
      <a href={infoContacto.linkedin} aria-label="LinkedIn" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform">
        <svg class="w-6 h-6" style="color: var(--color-primary)" viewBox="0 0 24 24" fill="currentColor">
          <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
        </svg>
      </a>
      <a href={`mailto:${infoContacto.email}`} aria-label="Email" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform">
        <svg class="w-6 h-6" style="color: var(--color-primary)" viewBox="0 0 24 24" fill="currentColor">
          <path d="M0 3v18h24v-18h-24zm6.623 7.929l-4.623 5.712v-9.458l4.623 3.746zm-4.141-5.929h19.035l-9.517 7.713-9.518-7.713zm5.694 7.188l3.824 3.099 3.83-3.104 5.612 6.817h-18.779l5.513-6.812zm9.208-1.264l4.616-3.741v9.348l-4.616-5.607z"/>
        </svg>
      </a>

      <!-- Botón hamburguesa -->
      <button class="md:hidden text-gray-800" onclick="toggleMenu()">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Menú móvil -->
  <nav id="mobile-menu" class="origin-top-right transform scale-y-100 transition-transform duration-300 ease-in-out md:hidden bg-white fixed top-[68px] right-0 w-[70%] max-w-60 px-6 pt-4 pb-6 shadow-lg space-y-4 text-lg font-medium text-gray-800 hidden z-40 rounded-bl-2xl">
    <a href="/" onclick="hideMenu()" class="block hover:text-white transition-colors">Inicio</a>
    <a href="/#proyectos" onclick="hideMenu()" class="block hover:text-white transition-colors">Proyectos</a>
    <a href="/#acerca-contacto" onclick="hideMenu()" class="block hover:text-white transition-colors">Contacto</a>
  </nav>

</header>

<script is:script>
  function toggleMenu() {
    const menu = document.getElementById('mobile-menu');
    if (menu) {
      menu.classList.toggle('hidden');
    }
  }
</script>

<script is:script>
  function toggleMenu() {
    const menu = document.getElementById('mobile-menu');
    if (menu.classList.contains('hidden')) {
      menu.classList.remove('hidden');
      requestAnimationFrame(() => {
        menu.classList.remove('scale-y-0');
        menu.classList.add('scale-y-100');
      });
    } else {
      hideMenu();
    }
  }

  function hideMenu() {
    const menu = document.getElementById('mobile-menu');
    menu.classList.remove('scale-y-100');
    menu.classList.add('scale-y-0');
    setTimeout(() => {
      menu.classList.add('hidden');
    }, 300); // debe coincidir con duration-300
  }
</script>

<script is:script>
  // Cerrar el menú si se hace clic fuera del mismo o del botón hamburguesa
  document.addEventListener('click', (event) => {
    const menu = document.getElementById('mobile-menu');
    const isMenuOpen = !menu.classList.contains('hidden');
    const button = document.querySelector('button[onclick="toggleMenu()"]');

    if (
      isMenuOpen &&
      !menu.contains(event.target) &&
      !button.contains(event.target)
    ) {
      hideMenu();
    }
  });
</script>

